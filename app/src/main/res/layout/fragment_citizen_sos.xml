<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.citizen.fragments.CitizenSosFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff2f0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Top SOS Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_margin="16dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center_horizontal">

                    <!-- Warning Icon -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/warning_24px"
                        android:layout_marginBottom="8dp"
                        app:tint="#FF0000" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency SOS"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp"/>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Press the button below to send an emergency alert with your location to nearest responders"
                        android:textColor="#555555"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <!-- SOS Button -->
                    <Button
                        android:id="@+id/btnSos"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:backgroundTint="#FF0000"
                        android:text="SOS"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="16dp"/>

                    <!-- Location and Time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/outline_location_on_24"
                            android:layout_marginEnd="4dp"
                            app:tint="#555555" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: Dhanbad, Jharkhand"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/round_access_time_24"
                            android:layout_marginEnd="4dp"
                            app:tint="#555555" />

                        <TextView
                            android:id="@+id/tvCurrentTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current time: 5:19:27 PM"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Emergency Contacts Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_margin="16dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:orientation="vertical">

                    <!-- Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\tEmergency Contacts"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:drawableStart="@drawable/outline_call_24"
                        android:layout_marginBottom="12dp" />

                    <!-- Fire Department -->
                    <include layout="@layout/item_emergency_contact"
                        android:id="@+id/contactFire"
                        android:tag="Fire Department,101,@drawable/ic_fire" />

                    <!-- Police -->
                    <include layout="@layout/item_emergency_contact"
                        android:id="@+id/contactPolice"
                        android:tag="Police,100,@drawable/ic_police" />

                    <!-- Medical Emergency -->
                    <include layout="@layout/item_emergency_contact"
                        android:id="@+id/contactMedical"
                        android:tag="Medical Emergency,108,@drawable/ic_medical" />

                    <!-- Disaster Management -->
                    <include layout="@layout/item_emergency_contact"
                        android:id="@+id/contactDisaster"
                        android:tag="Disaster Management,1077,@drawable/ic_disaster" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- User's SOS Requests -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your SOS Requests"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMySos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>