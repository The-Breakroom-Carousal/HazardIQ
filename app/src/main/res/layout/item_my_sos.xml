<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#f0f0f0"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvSosType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medical Emergency"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvSosCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dhanbad"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textColor="#777777"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvResponderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responder: N/A"
        android:visibility="gone"
        android:textColor="#4CAF50"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnMarkAsResolvedC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as resolved"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>
</LinearLayout>
