<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#FFA500"
        android:endColor="#FFF500" />

    <!-- Optional shadow (API 21+) -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
